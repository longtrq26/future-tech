{
  "printWidth": 100,
  "tabWidth": 2,
  "semi": false,
  "singleQuote": true,
  "jsxSingleQuote": true,
  "trailingComma": "all",
  "endOfLine": "lf",

  "bracketSpacing": true,
  "bracketSameLine": false,
  "quoteProps": "as-needed",
  "arrowParens": "avoid",

  "importOrder": [
    "^(react/(.*)$)|^(react$)|^(react-dom/(.*)$)|^(react-dom$)",
    "^(next/(.*)$)|^(next$)",

    "<THIRD_PARTY_MODULES>",
    "^payload$",
    "^@payloadcms/(.*)$",

    "^types$",
    "^@/types/(.*)$",

    "^@/config/(.*)$",
    "^@/lib/(.*)$",

    "^@/access/(.*)$",
    "^@/collections/(.*)$",
    "^@/globals/(.*)$",

    "^@/hooks/(.*)$",
    "^@/components/(.*)$",
    "^@/app/(.*)$",

    "^[./]"
  ],

  "importOrderParserPlugins": ["typescript", "jsx", "decorators-legacy"],
  "plugins": [
    "@ianvs/prettier-plugin-sort-imports",
    "prettier-plugin-css-order",
    "prettier-plugin-tailwindcss"
  ]
}
